<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="book_create"
			editable="true"
			layout="ColumnLayout"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
			<f:content>
				<Label text="{i18n>bookListTitle}" />
				<Input id="caption" value="{books>caption}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>