<mvc:View
	controllerName="book_create.controller.BookDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	busyIndicatorDelay="0">
	<Page
		title="{i18n>BookDetailsOf} {books>caption}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel
				width="auto"
				class="sapUiResponsiveMargin sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm
						minWidth="1024"
						editable="false"
						layout="ResponsiveGridLayout"
						>
						<f:content>
							<Label text="{i18n>formCaption}"/>
							<Text text="{books>caption}"/>
							<Label text="{i18n>formAuthor}"/>
						<!--	<FormattedText htmlText="{people>AddressInfo/0/Address}" />-->
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>
