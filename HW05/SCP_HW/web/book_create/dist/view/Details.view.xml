<mvc:View
	controllerName="book_create.controller.BookDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	busyIndicatorDelay="0">
	<Page
        id="page"
		title="{i18n>PageTitle}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
        <customHeader>
 					<Bar>
                <contentRight>
                    <Button id="edit" text="Edit" visible="{/edit}" press="handleEditPress"/>
                    <Button id="save" text="Save" visible="{/save}" press="handleSavePress"/>
                    <Button id="cancel" text="Cancel" visible="{/cancel}" press="handleCancelPress"/>
                </contentRight>
                <contentRight>
                    <Button id="delete" text="Delete" press="handleDeletePress"/>
                </contentRight>
            </Bar>
		</customHeader>
	</Page>
</mvc:View>
