<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChangeColumn_oneGroup234"
			editable="true"
			layout="ColumnLayout"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
		>
			<f:content>
				<Label text="{i18n>bookIdLabel}" />
				<Text id="cID" text="{books>bid}" />
				<Label text="{i18n>bookAuthorLabel}" />
				<Input id="authid" value="{books>authid}" />
				<Label text="{i18n>bookCaptionLabel}" />
				<Input id="caption" value="{books>caption}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>