namespace SAM;
using SAM::Author;

context ExtraInfo{

		entity Books {
				@Comment: 'Id of Book'
				key bid : String(4);
		    @Comment: 'Author of the Book'
		    authid : String(4);
		    @Comment: 'Caption'
		    caption : String(50);
				@Comment: 'Updated Date'
    		onUpdate: UTCDateTime;
				@Comment: 'Created Date'
    		onCreate: UTCDateTime;

			toAuthor : Association[1] to Author on toAuthor.authid = authid;
		};
};
